# Jorge Cabrera (ju1464) - (https://www.opencode.net/ju1464/Snowblind)
# Snowblind Openbox Theme

# Window geometry
padding.width: 6
border.width: 1
window.client.padding.width: 1
window.client.padding.height: 0
window.handle.width: 2

#Menu geometry
menu.border.width: 8
menu.overlap.x: -10
menu.overlap.y: 0

# Border colors
window.active.border.color: #4B767A
window.inactive.border.color: #7cb4b4
