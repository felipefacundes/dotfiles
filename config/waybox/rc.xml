    <!-- Keybindings for windows -->
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>
    <keybind key="C-Escape">
      <action name="Exit"/>
    </keybind>
    <keybind key="W-c">
      <action name="Reconfigure"/>
    </keybind>
